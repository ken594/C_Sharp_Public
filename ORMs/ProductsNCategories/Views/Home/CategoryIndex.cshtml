@model Category

<div class="text-center">
    @await Html.PartialAsync("_Navbar") 
</div>
<div class="d-flex justify-content-around">
    <div>
        <h1 class="text-center">New Category</h1>
        <form action="/categories/create" method="post">
            <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Name:</label>
            <input asp-for="CategoryName" class="form-control">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary mt-2">
        </form>
    </div>
    <div class="vertical"></div>
    <div>
        <h1 class="text-center">All Categories</h1>
        <ul class="list-group">
            @foreach (Category c in ViewBag.AllCategories)
            {
                <li class="list-group-item"><a href="/categories/@c.CategoryId">@c.CategoryName</a></li>
            }
        </ul>
    </div>
</div>