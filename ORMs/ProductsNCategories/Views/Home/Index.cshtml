@model Product
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @await Html.PartialAsync("_Navbar") 
</div>
<div class="d-flex justify-content-around">
    <div>
        <h1 class="text-center">New Product</h1>
        <form action="/products/create" method="post">
            <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Name:</label>
            <input asp-for="ProductName" class="form-control">
            <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description:</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price: </label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <input type="submit" value="Create" class="btn btn-primary mt-2">
        </form>
    </div>
    <div class="vertical"></div>
    <div>
        <h1 class="text-center">All Products</h1>
        <ul class="list-group">
            @foreach (Product p in ViewBag.AllProducts)
            {
                <li class="list-group-item"><a href="/products/@p.ProductId">@p.ProductName</a></li>
            }
        </ul>
    </div>
</div>
