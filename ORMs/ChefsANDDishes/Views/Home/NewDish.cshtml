@model Dish
<div class="text-center">
    @await Html.PartialAsync("_Navbar")
    <h1>Add a dish</h1>
    <hr>
</div>
<form action="/dishes/create" method="post" class="w-75 mx-auto">
    @* To show all the validation error *@
    @* <div asp-validation-summary="All" class="text-danger">
    </div> *@
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name of Dish:</label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Calories" class="form-label"># of Calories:</label>
        <input asp-for="Calories" class="form-control">
        <span asp-validation-for="Calories" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ChefId" class="form-label">Chef's Name: </label>
        <select asp-for="ChefId" class="form-select">
            @foreach (Chef c in ViewBag.AllChefs)
            {
                <option value="@c.ChefId">
                    @c.FirstName @c.LastName
                </option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Tastiness" class="form-label">Tastiness: </label>
        <select asp-for="Tastiness" class="form-select">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    <input type="submit" value="Add Dish" class="btn btn-primary mt-2">
</form>